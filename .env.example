# -----------------------------
# MySQL (used by docker-compose db service)
# -----------------------------
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=credits

# -----------------------------
# API
# -----------------------------
API_KEY=dev-api-key

# -----------------------------
# App runtime
# -----------------------------
# Docker: use host "db"
# Local run: switch host to 127.0.0.1
DATABASE_URL=mysql+asyncmy://root:root@db:3306/credits
PYTHONPATH=./src
